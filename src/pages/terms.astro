---
// src/pages/terms.astro
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const entry = await getEntry('terms', 'terms');
const { Content, headings } = await entry.render();
const { title, description, lastUpdated } = entry.data;
---

<Layout title={title} description={description}>
    <div class="terms-page">
        <div class="terms-header">
            <div class="container">
                <h1 class="page-title">{title}</h1>
                {description && <p class="page-description">{description}</p>}
                {lastUpdated && (
                    <p class="last-updated">
                        最後更新：{lastUpdated.toLocaleDateString('zh-TW', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                        })}
                    </p>
                )}
            </div>
        </div>

        <div class="terms-container">
            <div class="container">
                <div class="terms-layout">
                    <!-- Table of Contents -->
                    <aside class="toc-sidebar">
                        <div class="toc-sticky">
                            <button class="toc-toggle" id="tocToggle">
                                <span class="toc-text">目錄</span>
                                <span class="toc-arrow">▼</span>
                            </button>
                            <nav class="toc-nav" id="tocNav">
                                <ul class="toc-list">
                                    {headings.map((heading) => (
                                        <li class={`toc-item toc-level-${heading.depth}`}>
                                            <a href={`#${heading.slug}`} class="toc-link">
                                                {heading.text}
                                            </a>
                                        </li>
                                    ))}
                                </ul>
                            </nav>
                        </div>
                    </aside>

                    <!-- Main Content -->
                    <article class="terms-content">
                        <div class="markdown-body">
                            <Content />
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Terms Page Layout */
        .terms-page {
            min-height: 100vh;
            padding-top: 80px;
        }

        .terms-header {
            padding: var(--spacing-xl) 0 var(--spacing-lg);
            background: rgba(26, 26, 27, 0.3);
            border-bottom: 1px solid var(--border-color);
        }

        .page-title {
            font-size: clamp(2rem, 5vw, 3rem);
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: var(--spacing-sm);
            text-align: center;
        }

        .page-description {
            font-size: var(--font-size-lg);
            color: var(--text-secondary);
            text-align: center;
            max-width: 800px;
            margin: 0 auto var(--spacing-xs);
        }

        .last-updated {
            font-size: var(--font-size-sm);
            color: var(--text-secondary);
            text-align: center;
            opacity: 0.7;
        }

        /* Terms Container */
        .terms-container {
            padding: var(--spacing-xl) 0 var(--spacing-xxl);
        }

        .terms-layout {
            display: grid;
            grid-template-columns: 280px 1fr;
            gap: var(--spacing-xl);
            align-items: start;
            position: relative;
        }

        /* Table of Contents */
        .toc-sidebar {
            position: sticky;
            top: 100px;
            height: fit-content;
            max-height: calc(100vh - 120px);
            overflow-y: auto;
        }

        .toc-sticky {
            position: relative;
        }

        /* Custom scrollbar for ToC */
        .toc-sidebar::-webkit-scrollbar {
            width: 4px;
        }

        .toc-sidebar::-webkit-scrollbar-track {
            background: transparent;
        }

        .toc-sidebar::-webkit-scrollbar-thumb {
            background: var(--border-color);
            border-radius: 2px;
        }

        .toc-sidebar::-webkit-scrollbar-thumb:hover {
            background: var(--primary-color);
        }

        .toc-toggle {
            display: none;
            width: 100%;
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: var(--border-radius);
            padding: var(--spacing-sm);
            color: var(--text-primary);
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            align-items: center;
            gap: var(--spacing-xs);
            margin-bottom: var(--spacing-sm);
        }

        .toc-toggle:hover {
            border-color: var(--primary-color);
        }

        .toc-icon {
            font-size: 1.2rem;
        }

        .toc-text {
            flex: 1;
            text-align: left;
        }

        .toc-arrow {
            font-size: 0.8rem;
            transition: var(--transition);
        }

        .toc-toggle.active .toc-arrow {
            transform: rotate(180deg);
        }

        .toc-nav {
            background: var(--bg-card);
            backdrop-filter: blur(20px);
            border: 1px solid var(--border-color);
            border-radius: var(--border-radius);
            padding: var(--spacing-md);
            box-shadow: var(--shadow);
        }

        .toc-list {
            list-style: none;
        }

        .toc-item {
            margin-bottom: var(--spacing-xs);
        }

        .toc-level-2 {
            padding-left: 0;
        }

        .toc-level-3 {
            padding-left: var(--spacing-sm);
        }

        .toc-level-4 {
            padding-left: var(--spacing-md);
        }

        .toc-link {
            display: block;
            color: var(--text-secondary);
            text-decoration: none;
            padding: 0.4rem var(--spacing-xs);
            border-radius: var(--border-radius-small);
            transition: var(--transition);
            font-size: var(--font-size-sm);
            line-height: 1.4;
        }

        .toc-link:hover {
            color: var(--primary-color);
            background: rgba(212, 165, 116, 0.1);
        }

        .toc-link.active {
            color: var(--primary-color);
            background: rgba(212, 165, 116, 0.15);
            font-weight: 600;
        }

        /* Main Content */
        .terms-content {
            background: var(--bg-card);
            backdrop-filter: blur(20px);
            border: 1px solid var(--border-color);
            border-radius: var(--border-radius);
            padding: var(--spacing-xl);
            box-shadow: var(--shadow);
        }

        /* Markdown Styling */
        .markdown-body {
            color: var(--text-primary);
            line-height: 1.8;
        }

        .markdown-body :global(h1),
        .markdown-body :global(h2),
        .markdown-body :global(h3),
        .markdown-body :global(h4),
        .markdown-body :global(h5),
        .markdown-body :global(h6) {
            color: var(--text-primary);
            font-weight: 600;
            line-height: 1.3;
            scroll-margin-top: 100px;
        }

        .markdown-body :global(h1) {
            font-size: var(--font-size-3xl);
            margin-top: var(--spacing-xl);
            margin-bottom: var(--spacing-md);
            padding-bottom: var(--spacing-sm);
            border-bottom: 2px solid var(--border-color);
            color: var(--primary-color);
        }

        .markdown-body :global(h2) {
            font-size: var(--font-size-2xl);
            margin-top: var(--spacing-lg);
            margin-bottom: var(--spacing-sm);
            padding-bottom: var(--spacing-xs);
            border-bottom: 1px solid var(--border-color);
            color: var(--primary-color);
        }

        .markdown-body :global(h3) {
            font-size: var(--font-size-xl);
            margin-top: var(--spacing-md);
            margin-bottom: var(--spacing-sm);
            color: var(--accent-color);
        }

        .markdown-body :global(h4) {
            font-size: var(--font-size-lg);
            margin-top: var(--spacing-sm);
            margin-bottom: var(--spacing-xs);
        }

        .markdown-body :global(p) {
            margin-bottom: var(--spacing-sm);
            color: var(--text-secondary);
        }

        .markdown-body :global(a) {
            color: var(--primary-color);
            text-decoration: none;
            border-bottom: 1px solid transparent;
            transition: var(--transition);
        }

        .markdown-body :global(a:hover) {
            border-bottom-color: var(--primary-color);
        }

        .markdown-body :global(strong) {
            color: var(--text-primary);
            font-weight: 600;
        }

        .markdown-body :global(em) {
            color: var(--accent-color);
        }

        .markdown-body :global(code) {
            background: rgba(212, 165, 116, 0.15);
            color: var(--primary-color);
            padding: 0.2rem 0.4rem;
            border-radius: 4px;
            font-family: 'Courier New', monospace;
            font-size: 0.9em;
        }

        .markdown-body :global(pre) {
            background: rgba(10, 10, 11, 0.5);
            border: 1px solid var(--border-color);
            border-radius: var(--border-radius-small);
            padding: var(--spacing-sm);
            overflow-x: auto;
            margin: var(--spacing-sm) 0;
        }

        .markdown-body :global(pre code) {
            background: none;
            padding: 0;
            color: var(--text-primary);
        }

        .markdown-body :global(ul),
        .markdown-body :global(ol) {
            margin-bottom: var(--spacing-sm);
            padding-left: var(--spacing-lg);
        }

        .markdown-body :global(li) {
            margin-bottom: var(--spacing-xs);
            color: var(--text-secondary);
        }

        .markdown-body :global(li::marker) {
            color: var(--primary-color);
        }

        .markdown-body :global(blockquote) {
            border-left: 4px solid var(--primary-color);
            padding-left: var(--spacing-sm);
            margin: var(--spacing-sm) 0;
            color: var(--text-secondary);
            font-style: italic;
            background: rgba(212, 165, 116, 0.05);
            padding: var(--spacing-sm);
            border-radius: 0 var(--border-radius-small) var(--border-radius-small) 0;
        }

        .markdown-body :global(hr) {
            border: none;
            border-top: 1px solid var(--border-color);
            margin: var(--spacing-lg) 0;
        }

        .markdown-body :global(table) {
            width: 100%;
            border-collapse: collapse;
            margin: var(--spacing-sm) 0;
            background: rgba(26, 26, 27, 0.3);
            border-radius: var(--border-radius-small);
            overflow: hidden;
        }

        .markdown-body :global(th),
        .markdown-body :global(td) {
            padding: var(--spacing-xs) var(--spacing-sm);
            border: 1px solid var(--border-color);
        }

        .markdown-body :global(th) {
            background: rgba(212, 165, 116, 0.15);
            color: var(--primary-color);
            font-weight: 600;
            text-align: left;
        }

        .markdown-body :global(td) {
            color: var(--text-secondary);
        }

        .markdown-body :global(img) {
            max-width: 100%;
            height: auto;
            border-radius: var(--border-radius-small);
            margin: var(--spacing-sm) 0;
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .terms-layout {
                grid-template-columns: 1fr;
            }

            .toc-sidebar {
                order: -1;
                position: static;
                max-height: none;
            }

            .toc-sticky {
                position: static;
            }

            .toc-toggle {
                display: flex;
            }

            .toc-nav {
                display: none;
                margin-bottom: var(--spacing-md);
            }

            .toc-nav.show {
                display: block;
            }
        }

        @media (max-width: 768px) {
            .terms-header {
                padding: var(--spacing-lg) 0 var(--spacing-sm);
            }

            .terms-container {
                padding: var(--spacing-lg) 0;
            }

            .terms-content {
                padding: var(--spacing-md);
            }

            .markdown-body :global(h1) {
                font-size: var(--font-size-2xl);
            }

            .markdown-body :global(h2) {
                font-size: var(--font-size-xl);
            }

            .markdown-body :global(h3) {
                font-size: var(--font-size-lg);
            }
        }

        @media (max-width: 480px) {
            .terms-content {
                padding: var(--spacing-sm);
                border-radius: var(--border-radius-small);
            }

            .page-title {
                font-size: 1.8rem;
            }
        }
    </style>

    <script>
        // ToC Toggle for Mobile
        const tocToggle = document.getElementById('tocToggle');
        const tocNav = document.getElementById('tocNav');

        if (tocToggle && tocNav) {
            tocToggle.addEventListener('click', () => {
                tocToggle.classList.toggle('active');
                tocNav.classList.toggle('show');
            });
        }

        // Active ToC Link on Scroll
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    const id = entry.target.getAttribute('id');
                    const tocLink = document.querySelector(`.toc-link[href="#${id}"]`);
                    
                    if (tocLink) {
                        if (entry.isIntersecting) {
                            document.querySelectorAll('.toc-link').forEach((link) => {
                                link.classList.remove('active');
                            });
                            tocLink.classList.add('active');
                        }
                    }
                });
            },
            {
                rootMargin: '-100px 0px -66%',
                threshold: 0,
            }
        );

        // Observe all headings
        document.querySelectorAll('.markdown-body h1, .markdown-body h2, .markdown-body h3').forEach((heading) => {
            observer.observe(heading);
        });

        // Smooth scroll for ToC links
        document.querySelectorAll('.toc-link').forEach((link) => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const targetId = link.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                if (targetElement) {
                    const offset = 100;
                    const elementPosition = targetElement.getBoundingClientRect().top;
                    const offsetPosition = elementPosition + window.pageYOffset - offset;

                    window.scrollTo({
                        top: offsetPosition,
                        behavior: 'smooth'
                    });

                    // Close mobile ToC after clicking
                    if (window.innerWidth <= 1024) {
                        tocNav?.classList.remove('show');
                        tocToggle?.classList.remove('active');
                    }
                }
            });
        });
    </script>
</Layout>